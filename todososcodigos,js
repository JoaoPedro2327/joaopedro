# ===============================
# üóÇÔ∏è arquivo: tabela-precos.py
# ===============================

lojas = ["Loja A", "Loja B", "Loja C"]
precos = [
    [10.50, 12.30, 9.90],
    [8.40, 7.20, 6.50],
    [14.00, 13.50, 15.00]
]

for i in range(len(lojas)):
    print(f"\n{lojas[i]}:")
    for preco in precos[i]:
        print(f"R$ {preco:.2f}")

